#!/bin/bash

function ask_for_password() {
  local password
  read -r -p "Please create a password: " password
}

function no_special_character() {
  local special_characters=['!@#$%^&*()_+']
  if [[ $password =~ $special_characters ]]; then echo false; else echo true; fi
}

function not_enough_characters() {
    local min_char_length=5
    local actual_char_length=${#password}
    if [[ $actual_char_length > $min_char_length ]]; then echo false; else echo true; fi
}
has_special_char="$(no_special_character)"
echo "$has_special_char"

has_enough_char="$(not_enough_characters)"
echo "$has_enough_char"

while [ $has_special_char ]; do

done



function main() {
  password=$(password_generation)
    password=$(password_generation)
}
main "$@"
